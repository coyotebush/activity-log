<h1>Listing activities</h1>

<table>
  <tr>
    <th>Start</th>
    <th>End</th>
    <th>Distance</th>
    <th>Type</th>
    <th>Note</th>
  </tr>

<% @activities.each do |activity| %>
  <tr>
    <td><%=h activity.start_time %></td>
    <td><%=h activity.end_time %></td>
    <td><%=h activity.distance %></td>
    <td><%=h activity.activity_type %></td>
    <td><%=h activity.note %></td>
    <td><%= link_to 'Show', activity %></td>
    <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
    <td><%= link_to 'Destroy', activity, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New activity', new_activity_path %>