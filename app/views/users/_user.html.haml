- form_for @user do |f|
  = f.error_messages
  %p
    = f.label :email, "Email:"
    = f.text_field :email
  %p
    = f.label :password, "Password:"
    = f.password_field :password
  %p
    = f.label :password_confirmation, "Confirm password:"
    = f.password_field :password_confirmation
  - if @user.new_record?
    %p
      = recaptcha_tags
  %p
    = f.submit "Submit"